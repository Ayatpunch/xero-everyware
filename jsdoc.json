{
  "source": {
    "include": ["./"],
    "exclude": ["node_modules", "docs"],
    "includePattern": ".+\\.js(doc|x)?$"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/generated",
    "recurse": true,
    "readme": "./README.md",
    "template": "templates/default",
    "encoding": "utf8",
    "private": true,
    "package": "./package.json"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "default": {
      "includeDate": false,
      "outputSourceFiles": true,
      "useLongnameInNav": true
    }
  }
}
