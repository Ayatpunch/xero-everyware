{
  "source": {
    "include": ["./"],
    "exclude": ["node_modules", "docs"],
    "includePattern": ".+\\.js(doc|x)?$"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "destination": "./docs/generated",
    "recurse": true,
    "readme": "./README.md"
  },
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  }
}
